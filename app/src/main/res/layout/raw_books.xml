<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/matCard"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="150dp"
        app:strokeColor="@color/black"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        app:strokeWidth="2sp"
        app:cardCornerRadius="25dp">



        <ImageView
            android:id="@+id/rawPicture"
            android:layout_width="90dp"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/rawAddToFavory"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_favorite"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"/>



         <TextView
             android:id="@+id/rawAuthor"
             android:layout_width="160dp"
             android:layout_marginLeft="95dp"
             android:layout_marginTop="7dp"
             android:textSize="15sp"
             android:layout_height="wrap_content"
             android:hint="Autheur"
             android:textColorHint="@color/black"/>


            <TextView
                android:id="@+id/rawTitle"
                android:layout_width="210dp"
                android:textSize="11sp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="26dp"
                android:layout_height="wrap_content"
                android:hint="Titre de l'oeuvre"
                android:textColorHint="@color/black"/>

        <TextView
            android:id="@+id/rawYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="39dp"
            android:hint="AnnÃ©e"
            android:textColorHint="@color/black"/>

        <TextView
            android:id="@+id/rawDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="italic"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:hint="Description"
            android:textColorHint="@color/black"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>