<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:strokeColor="@color/purple_200"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="3dp"
        app:strokeWidth="4sp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/rawFavoryPicture"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/rawFavoryDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cancel"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rawFavoryAuthor"
                android:layout_width="160dp"
                android:layout_marginLeft="5dp"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:hint="Autheur"
                android:textColorHint="@color/black"/>

            <TextView
                android:id="@+id/rawFavoryTitle"
                android:layout_width="210dp"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:hint="Titre de l'oeuvre"
                android:textColorHint="@color/black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/rawFavoryYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="78dp"
            android:hint="AnnÃ©e"
            android:textColorHint="@color/black"/>

        <TextView
            android:id="@+id/rawFavoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="104dp"
            android:hint="Description"
            android:textColorHint="@color/black"/>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>